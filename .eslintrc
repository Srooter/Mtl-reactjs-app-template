{
  "root": true,
  "extends": ["prettier"],
  "plugins": ["react-hooks","prettier"],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "document": true,
    "console": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 10,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "react-hooks/rules-of-hooks": "error", 
    "react-hooks/exhaustive-deps": "warn", 
    "max-len": ["error", { "code": 120 }],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-debugger":"error"
  }
}
